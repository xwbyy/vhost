<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Logs: <%= app.name %> - <%= appName %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  <link href="/css/style.css" rel="stylesheet">
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/">
        <i class="bi bi-cloud-arrow-up-fill me-2"></i><%= appName %>
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/"><i class="bi bi-house-door me-1"></i>Beranda</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/deploy"><i class="bi bi-rocket-takeoff me-1"></i>Deploy</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/apps"><i class="bi bi-grid me-1"></i>Aplikasi</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <main class="container py-4">
    <div class="row mb-4">
      <div class="col-12">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/apps">Aplikasi</a></li>
            <li class="breadcrumb-item"><a href="/apps/<%= app.name %>"><%= app.name %></a></li>
            <li class="breadcrumb-item active">Logs</li>
          </ol>
        </nav>
      </div>
    </div>

    <div class="row mb-4">
      <div class="col-12">
        <div class="card">
          <div class="card-header d-flex justify-content-between align-items-center">
            <h4 class="mb-0">
              <i class="bi bi-terminal me-2"></i>Logs: <%= app.name %>
              <span class="badge ms-2 <%= app.isRunning ? 'bg-success' : 'bg-secondary' %>">
                <%= app.isRunning ? 'Online' : 'Offline' %>
              </span>
            </h4>
            <div class="btn-group">
              <button class="btn btn-outline-primary" onclick="refreshLogs('out')">
                <i class="bi bi-arrow-clockwise me-1"></i>Refresh
              </button>
              <button class="btn btn-outline-secondary" id="auto-refresh-btn" onclick="toggleAutoRefresh()">
                <i class="bi bi-pause me-1"></i>Auto: OFF
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-12">
        <ul class="nav nav-tabs" id="logTabs" role="tablist">
          <li class="nav-item" role="presentation">
            <button class="nav-link active" id="output-tab" data-bs-toggle="tab" data-bs-target="#output" type="button">
              <i class="bi bi-terminal me-1"></i>Output
            </button>
          </li>
          <li class="nav-item" role="presentation">
            <button class="nav-link" id="error-tab" data-bs-toggle="tab" data-bs-target="#error" type="button">
              <i class="bi bi-exclamation-triangle me-1"></i>Error
            </button>
          </li>
        </ul>
        <div class="tab-content border border-top-0 rounded-bottom">
          <div class="tab-pane fade show active" id="output" role="tabpanel">
            <pre class="bg-dark text-light m-0 p-3" id="output-logs" style="min-height: 500px; max-height: 70vh; overflow-y: auto; font-size: 13px;"><code>Memuat logs...</code></pre>
          </div>
          <div class="tab-pane fade" id="error" role="tabpanel">
            <pre class="bg-danger bg-opacity-10 text-danger m-0 p-3" id="error-logs" style="min-height: 500px; max-height: 70vh; overflow-y: auto; font-size: 13px;"><code>Memuat logs...</code></pre>
          </div>
        </div>
      </div>
    </div>
  </main>

  <footer class="footer mt-auto py-3 bg-light">
    <div class="container text-center">
      <span class="text-muted">
        <i class="bi bi-code-slash me-1"></i>
        <%= appName %> v1.0.0 - Platform Hosting Mandiri
      </span>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/app.js"></script>
  <script>
    const appName = '<%= app.name %>';
    let autoRefreshInterval = null;
    let autoRefreshEnabled = false;

    async function refreshLogs(type) {
      type = type || 'out';
      try {
        const response = await fetch('/api/apps/' + appName + '/logs?type=' + type + '&lines=200');
        const data = await response.json();
        
        if (data.success) {
          const logElement = document.getElementById(type === 'out' ? 'output-logs' : 'error-logs');
          logElement.innerHTML = '<code>' + (data.logs || 'Tidak ada log') + '</code>';
          logElement.scrollTop = logElement.scrollHeight;
        }
      } catch (error) {
        console.error('Error refreshing logs:', error);
      }
    }

    function toggleAutoRefresh() {
      const btn = document.getElementById('auto-refresh-btn');
      
      if (autoRefreshEnabled) {
        clearInterval(autoRefreshInterval);
        autoRefreshInterval = null;
        autoRefreshEnabled = false;
        btn.innerHTML = '<i class="bi bi-play me-1"></i>Auto: OFF';
        btn.classList.remove('btn-primary');
        btn.classList.add('btn-outline-secondary');
      } else {
        autoRefreshInterval = setInterval(function() {
          refreshLogs('out');
          refreshLogs('error');
        }, 2000);
        autoRefreshEnabled = true;
        btn.innerHTML = '<i class="bi bi-pause me-1"></i>Auto: ON';
        btn.classList.remove('btn-outline-secondary');
        btn.classList.add('btn-primary');
      }
    }

    document.addEventListener('DOMContentLoaded', function() {
      refreshLogs('out');
      refreshLogs('error');
    });
  </script>
</body>
</html>
