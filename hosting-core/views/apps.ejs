<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Daftar Aplikasi - <%= appName %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  <link href="/css/style.css" rel="stylesheet">
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/">
        <i class="bi bi-cloud-arrow-up-fill me-2"></i><%= appName %>
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/"><i class="bi bi-house-door me-1"></i>Beranda</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/deploy"><i class="bi bi-rocket-takeoff me-1"></i>Deploy</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="/apps"><i class="bi bi-grid me-1"></i>Aplikasi</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <main class="container py-4">
    <div class="row mb-4">
      <div class="col-12 d-flex justify-content-between align-items-center">
        <h2><i class="bi bi-grid me-2"></i>Daftar Aplikasi</h2>
        <a href="/deploy" class="btn btn-primary">
          <i class="bi bi-plus-lg me-2"></i>Deploy Baru
        </a>
      </div>
    </div>

    <% if (error) { %>
    <div class="alert alert-danger"><%= error %></div>
    <% } %>

    <div class="row" id="apps-container">
      <% if (apps.length === 0) { %>
      <div class="col-12">
        <div class="card">
          <div class="card-body text-center py-5">
            <i class="bi bi-inbox display-1 text-muted"></i>
            <h4 class="mt-3 text-muted">Belum ada aplikasi</h4>
            <p class="text-muted">Mulai deploy aplikasi pertama Anda sekarang!</p>
            <a href="/deploy" class="btn btn-primary mt-2">
              <i class="bi bi-rocket-takeoff me-2"></i>Deploy Sekarang
            </a>
          </div>
        </div>
      </div>
      <% } else { %>
        <% apps.forEach(function(app) { %>
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card h-100 app-card" data-app="<%= app.name %>">
            <div class="card-header d-flex justify-content-between align-items-center">
              <h5 class="mb-0 text-truncate" title="<%= app.name %>"><%= app.name %></h5>
              <span class="badge <%= app.isRunning ? 'bg-success' : 'bg-secondary' %> status-badge">
                <% if (app.isRunning) { %>
                <i class="bi bi-circle-fill me-1"></i>Online
                <% } else { %>
                <i class="bi bi-circle me-1"></i>Offline
                <% } %>
              </span>
            </div>
            <div class="card-body">
              <div class="mb-3">
                <small class="text-muted d-block"><i class="bi bi-box me-1"></i>Tipe:</small>
                <span class="badge bg-info"><%= app.projectInfo ? app.projectInfo.name : app.projectType %></span>
              </div>
              <div class="mb-3">
                <small class="text-muted d-block"><i class="bi bi-hdd-network me-1"></i>Port:</small>
                <code><%= app.port %></code>
              </div>
              <div class="mb-3">
                <small class="text-muted d-block"><i class="bi bi-globe me-1"></i>Domain:</small>
                <code class="text-truncate d-block" title="<%= app.domain %>"><%= app.domain %></code>
              </div>
              <div>
                <small class="text-muted d-block"><i class="bi bi-calendar me-1"></i>Dibuat:</small>
                <span><%= new Date(app.createdAt).toLocaleDateString('id-ID') %></span>
              </div>
            </div>
            <div class="card-footer">
              <div class="btn-group w-100">
                <% if (app.isRunning) { %>
                <button class="btn btn-outline-warning btn-sm" onclick="appAction('<%= app.name %>', 'restart')" title="Restart">
                  <i class="bi bi-arrow-clockwise"></i>
                </button>
                <button class="btn btn-outline-danger btn-sm" onclick="appAction('<%= app.name %>', 'stop')" title="Stop">
                  <i class="bi bi-stop-fill"></i>
                </button>
                <% } else { %>
                <button class="btn btn-outline-success btn-sm" onclick="appAction('<%= app.name %>', 'start')" title="Start">
                  <i class="bi bi-play-fill"></i>
                </button>
                <% } %>
                <a href="/apps/<%= app.name %>" class="btn btn-outline-primary btn-sm" title="Detail">
                  <i class="bi bi-eye"></i>
                </a>
                <a href="/logs/<%= app.name %>" class="btn btn-outline-info btn-sm" title="Logs">
                  <i class="bi bi-terminal"></i>
                </a>
                <button class="btn btn-outline-danger btn-sm" onclick="deleteApp('<%= app.name %>')" title="Hapus">
                  <i class="bi bi-trash"></i>
                </button>
              </div>
            </div>
          </div>
        </div>
        <% }); %>
      <% } %>
    </div>

    <div class="modal fade" id="actionModal" tabindex="-1">
      <div class="modal-dialog modal-dialog-centered modal-sm">
        <div class="modal-content">
          <div class="modal-body text-center py-4">
            <div class="spinner-border text-primary mb-3" role="status">
              <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mb-0" id="action-status">Memproses...</p>
          </div>
        </div>
      </div>
    </div>
  </main>

  <footer class="footer mt-auto py-3 bg-light">
    <div class="container text-center">
      <span class="text-muted">
        <i class="bi bi-code-slash me-1"></i>
        <%= appName %> v1.0.0 - Platform Hosting Mandiri
      </span>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/app.js"></script>
</body>
</html>
