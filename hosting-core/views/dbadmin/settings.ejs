<!DOCTYPE html>
<html lang="id" data-theme="light">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
  <title>Pengaturan - <%= appName %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  <link href="/css/style.css" rel="stylesheet">
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
    <div class="container-fluid">
      <a class="navbar-brand" href="/"><i class="bi bi-cloud-arrow-up-fill me-2"></i><%= appName %></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav me-auto">
          <li class="nav-item"><a class="nav-link" href="/"><i class="bi bi-house-door me-1"></i>Beranda</a></li>
          <li class="nav-item"><a class="nav-link" href="/deploy"><i class="bi bi-rocket-takeoff me-1"></i>Deploy</a></li>
          <li class="nav-item"><a class="nav-link" href="/apps"><i class="bi bi-grid me-1"></i>Aplikasi</a></li>
          <li class="nav-item"><a class="nav-link" href="/terminal"><i class="bi bi-terminal me-1"></i>Terminal</a></li>
          <li class="nav-item"><a class="nav-link active" href="/dbadmin"><i class="bi bi-gear me-1"></i>Admin</a></li>
        </ul>
        <ul class="navbar-nav">
          <li class="nav-item"><button class="btn btn-link nav-link" id="themeToggle"><i class="bi bi-moon-stars"></i></button></li>
          <% if (typeof user !== 'undefined' && user) { %>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
              <span class="badge bg-warning text-dark me-2">VIP</span>
              <span class="d-none d-md-inline"><%= user.username %></span>
            </a>
            <ul class="dropdown-menu dropdown-menu-end">
              <li><a class="dropdown-item" href="/profile"><i class="bi bi-person me-2"></i>Profil</a></li>
              <li><hr class="dropdown-divider"></li>
              <li><a class="dropdown-item text-danger" href="/logout"><i class="bi bi-box-arrow-right me-2"></i>Logout</a></li>
            </ul>
          </li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <main class="main-content">
    <div class="container-fluid py-4">
      <div class="row">
        <div class="col-12 col-lg-3 mb-4">
          <div class="card">
            <div class="card-header bg-dark text-white">
              <h5 class="mb-0"><i class="bi bi-gear me-2"></i>Admin Panel</h5>
            </div>
            <div class="list-group list-group-flush">
              <a href="/dbadmin" class="list-group-item list-group-item-action">
                <i class="bi bi-speedometer2 me-2"></i>Dashboard
              </a>
              <a href="/dbadmin/users" class="list-group-item list-group-item-action">
                <i class="bi bi-people me-2"></i>Manajemen User
              </a>
              <a href="/dbadmin/settings" class="list-group-item list-group-item-action active">
                <i class="bi bi-sliders me-2"></i>Pengaturan
              </a>
            </div>
          </div>
        </div>

        <div class="col-12 col-lg-9">
          <div class="card">
            <div class="card-header">
              <h5 class="mb-0"><i class="bi bi-sliders me-2"></i>Pengaturan Website</h5>
            </div>
            <div class="card-body">
              <% if (typeof message !== 'undefined' && message) { %>
              <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= message %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
              </div>
              <% } %>

              <form action="/api/admin/settings" method="POST">
                <div class="row">
                  <div class="col-12 col-md-6 mb-4">
                    <h6 class="border-bottom pb-2"><i class="bi bi-globe me-2"></i>Umum</h6>
                    
                    <div class="mb-3">
                      <label class="form-label">Nama Website</label>
                      <input type="text" name="site_name" class="form-control" value="<%= settings.site_name || 'Hosting Mandiri' %>">
                    </div>

                    <div class="mb-3">
                      <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="allowReg" name="allow_registration" <%= settings.allow_registration === 'true' ? 'checked' : '' %>>
                        <label class="form-check-label" for="allowReg">Izinkan Registrasi Baru</label>
                      </div>
                    </div>

                    <div class="mb-3">
                      <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="maintenance" name="maintenance_mode" <%= settings.maintenance_mode === 'true' ? 'checked' : '' %>>
                        <label class="form-check-label" for="maintenance">Mode Maintenance</label>
                      </div>
                    </div>

                    <div class="mb-3">
                      <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="terminalEnabled" name="terminal_enabled" <%= settings.terminal_enabled === 'true' ? 'checked' : '' %>>
                        <label class="form-check-label" for="terminalEnabled">Aktifkan Terminal</label>
                      </div>
                    </div>
                  </div>

                  <div class="col-12 col-md-6 mb-4">
                    <h6 class="border-bottom pb-2"><i class="bi bi-people me-2"></i>Limit User Free</h6>
                    
                    <div class="mb-3">
                      <label class="form-label">Maksimal Aplikasi (Free)</label>
                      <input type="number" name="max_apps_free" class="form-control" value="<%= settings.max_apps_free || 3 %>" min="1" max="100">
                    </div>

                    <div class="mb-3">
                      <label class="form-label">Maksimal Storage MB (Free)</label>
                      <input type="number" name="max_storage_free" class="form-control" value="<%= settings.max_storage_free || 100 %>" min="10" max="10000">
                    </div>

                    <h6 class="border-bottom pb-2 mt-4"><i class="bi bi-star me-2"></i>Limit User VIP</h6>

                    <div class="mb-3">
                      <label class="form-label">Maksimal Aplikasi (VIP)</label>
                      <input type="number" name="max_apps_vip" class="form-control" value="<%= settings.max_apps_vip || 20 %>" min="1" max="1000">
                    </div>

                    <div class="mb-3">
                      <label class="form-label">Maksimal Storage MB (VIP)</label>
                      <input type="number" name="max_storage_vip" class="form-control" value="<%= settings.max_storage_vip || 1000 %>" min="100" max="100000">
                    </div>
                  </div>
                </div>

                <div class="border-top pt-3">
                  <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save me-2"></i>Simpan Pengaturan
                  </button>
                  <button type="reset" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-clockwise me-2"></i>Reset
                  </button>
                </div>
              </form>
            </div>
          </div>

          <div class="card mt-4">
            <div class="card-header bg-info text-white">
              <h6 class="mb-0"><i class="bi bi-info-circle me-2"></i>Informasi Spreadsheet Database</h6>
            </div>
            <div class="card-body">
              <p class="mb-2"><strong>Spreadsheet ID:</strong> <code><%= process.env.GOOGLE_SHEET_ID %></code></p>
              <p class="mb-2"><strong>Service Account:</strong> <code><%= process.env.GOOGLE_CLIENT_EMAIL %></code></p>
              <a href="https://docs.google.com/spreadsheets/d/<%= process.env.GOOGLE_SHEET_ID %>" target="_blank" class="btn btn-outline-info">
                <i class="bi bi-box-arrow-up-right me-1"></i>Buka Spreadsheet
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <footer class="footer mt-auto py-3 bg-light">
    <div class="container text-center">
      <span class="text-muted"><%= appName %> v2.0.0</span>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/app.js"></script>
</body>
</html>
